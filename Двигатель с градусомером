int speed1=5  ,dir1=4, Gr=A5,x;
 
 
void setup() 
{  
        pinMode(speed1, OUTPUT); 
        pinMode(dir1,OUTPUT);
        pinMode(Gr,INPUT);
} 
 
void loop() 
{
  x=analogRead(Gr);
  if (x<512){
    digitalWrite(Gr,LOW);
    analogWrite(speed1,255-x);
    delay(100);
  }
else{
  if (x>512){
   digitalWrite(Gr,HIGH);
    analogWrite(speed1,x); 
        delay(100);
  }
  else{
    analogWrite(speed1,0);
        delay(100);
  }
}
}
